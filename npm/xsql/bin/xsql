#!/usr/bin/env node

const { execFileSync } = require("child_process");
const path = require("path");
const os = require("os");

const PLATFORMS = {
  "linux-x64": "@xsql-cli/linux-x64",
  "linux-arm64": "@xsql-cli/linux-arm64",
  "darwin-x64": "@xsql-cli/darwin-x64",
  "darwin-arm64": "@xsql-cli/darwin-arm64",
  "win32-x64": "@xsql-cli/win32-x64",
  "win32-arm64": "@xsql-cli/win32-arm64",
};

function getBinaryPath() {
  const platform = os.platform();
  const arch = os.arch();
  const key = `${platform}-${arch}`;
  const pkg = PLATFORMS[key];

  if (!pkg) {
    throw new Error(
      `Unsupported platform: ${key}. xsql supports: ${Object.keys(PLATFORMS).join(", ")}`
    );
  }

  try {
    const pkgJson = require.resolve(`${pkg}/package.json`);
    const ext = platform === "win32" ? ".exe" : "";
    return path.join(path.dirname(pkgJson), "bin", `xsql${ext}`);
  } catch {
    throw new Error(
      `Could not find the xsql binary for ${key}. The package ${pkg} may not be installed.\n` +
      `Try reinstalling: npm install xsql-cli`
    );
  }
}

try {
  const binary = getBinaryPath();
  const result = execFileSync(binary, process.argv.slice(2), {
    stdio: "inherit",
    env: process.env,
  });
} catch (err) {
  if (err.status !== undefined) {
    process.exit(err.status);
  }
  console.error(err.message);
  process.exit(1);
}
